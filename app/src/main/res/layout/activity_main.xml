<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

  <TextView
          android:id="@+id/app_inapp_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="25dp"
          android:layout_marginTop="25dp"
          android:fontFamily="@font/museo"
          android:text="@string/app_inapp_name"
          android:textColor="@color/textColorPrimary"
          android:textFontWeight="700"
          android:textSize="28sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

  <soup.neumorphism.NeumorphCardView
          android:id="@+id/calculator_display"
          style="@style/Widget.Neumorph.CardView"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/app_inapp_name"
          app:neumorph_shadowElevation="-20dp"
          app:neumorph_shapeAppearance="@style/CustomDisplayAngleAppearance"
          app:neumorph_shapeType="pressed">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/calculator_display_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/display_gradient_color">

      <TextView
              android:id="@+id/calculator_display_mock"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginStart="24dp"
              android:layout_marginTop="24dp"
              android:layout_marginEnd="24dp"
              android:layout_marginBottom="24dp"
              android:fontFamily="@font/digitalnumbers"
              android:letterSpacing="0.15"
              android:scaleY="1.3"
              android:text="@string/calculator_display_mock"
              android:textColor="@color/displayMockFontColor"
              android:textFontWeight="500"
              android:textSize="51sp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

  </soup.neumorphism.NeumorphCardView>

  <soup.neumorphism.NeumorphButton
          android:id="@+id/ac_button"
          style="@style/Widget.Neumorph.Button"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_marginTop="12dp"
          android:drawablePadding="8dp"
          android:fontFamily="@font/montserrat"
          android:padding="12dp"
          android:text="@string/calculator_ac"
          android:textColor="@color/colorAccent"
          android:textSize="35sp"
          app:layout_constraintEnd_toStartOf="@+id/plus_and_minus_button"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/calculator_display" />

  <soup.neumorphism.NeumorphButton
          android:id="@+id/plus_and_minus_button"
          style="@style/Widget.Neumorph.Button"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_marginTop="12dp"
          android:drawablePadding="8dp"
          android:fontFamily="@font/montserrat"
          android:padding="12dp"
          android:text="@string/calculator_plus_and_minus"
          android:textColor="@color/colorAccent"
          android:textSize="35sp"
          app:layout_constraintEnd_toStartOf="@+id/percent_button"
          app:layout_constraintStart_toEndOf="@+id/ac_button"
          app:layout_constraintTop_toBottomOf="@+id/calculator_display" />

  <soup.neumorphism.NeumorphButton
          android:id="@+id/percent_button"
          style="@style/Widget.Neumorph.Button"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_marginTop="12dp"
          android:drawablePadding="8dp"
          android:fontFamily="@font/montserrat"
          android:padding="12dp"
          android:text="@string/calculator_percent"
          android:textColor="@color/colorAccent"
          android:textSize="35sp"
          app:layout_constraintEnd_toStartOf="@+id/divide_button"
          app:layout_constraintStart_toEndOf="@+id/plus_and_minus_button"
          app:layout_constraintTop_toBottomOf="@+id/calculator_display" />

  <soup.neumorphism.NeumorphButton
          android:id="@+id/divide_button"
          style="@style/Widget.Neumorph.Button"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_marginTop="12dp"
          android:drawablePadding="8dp"
          android:fontFamily="@font/montserrat"
          android:padding="12dp"
          android:text="@string/calculator_divide"
          android:textColor="@color/colorPrimary"
          android:textSize="35sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/percent_button"
          app:layout_constraintTop_toBottomOf="@+id/calculator_display"
          app:neumorph_backgroundColor="@color/colorAccent" />

  <soup.neumorphism.NeumorphButton
          android:id="@+id/seven_button"
          style="@style/Widget.Neumorph.Button"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:drawablePadding="8dp"
          android:fontFamily="@font/montserrat"
          android:padding="12dp"
          android:text="@string/calculator_seven"
          android:textColor="@color/colorAccent"
          android:textSize="35sp"
          app:layout_constraintEnd_toStartOf="@+id/eight_button"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/ac_button" />

  <soup.neumorphism.NeumorphButton
          android:id="@+id/eight_button"
          style="@style/Widget.Neumorph.Button"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:drawablePadding="8dp"
          android:fontFamily="@font/montserrat"
          android:padding="12dp"
          android:text="@string/calculator_eight"
          android:textColor="@color/colorAccent"
          android:textSize="35sp"
          app:layout_constraintEnd_toStartOf="@+id/nine_button"
          app:layout_constraintStart_toEndOf="@+id/seven_button"
          app:layout_constraintTop_toBottomOf="@+id/plus_and_minus_button" />

  <soup.neumorphism.NeumorphButton
          android:id="@+id/nine_button"
          style="@style/Widget.Neumorph.Button"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:drawablePadding="8dp"
          android:fontFamily="@font/montserrat"
          android:padding="12dp"
          android:text="@string/calculator_nine"
          android:textColor="@color/colorAccent"
          android:textSize="35sp"
          app:layout_constraintEnd_toStartOf="@+id/multiply_button"
          app:layout_constraintStart_toEndOf="@+id/eight_button"
          app:layout_constraintTop_toBottomOf="@+id/percent_button" />

  <soup.neumorphism.NeumorphButton
          android:id="@+id/multiply_button"
          style="@style/Widget.Neumorph.Button"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:drawablePadding="8dp"
          android:fontFamily="@font/montserrat"
          android:padding="12dp"
          android:text="@string/calculator_multiply"
          android:textColor="@color/colorPrimary"
          android:textSize="35sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/nine_button"
          app:layout_constraintTop_toBottomOf="@+id/divide_button"
          app:neumorph_backgroundColor="@color/colorAccent" />

  <soup.neumorphism.NeumorphButton
          android:id="@+id/four_button"
          style="@style/Widget.Neumorph.Button"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:drawablePadding="8dp"
          android:fontFamily="@font/montserrat"
          android:padding="12dp"
          android:text="@string/calculator_four"
          android:textColor="@color/colorAccent"
          android:textSize="35sp"
          app:layout_constraintEnd_toStartOf="@+id/five_button"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/seven_button" />

  <soup.neumorphism.NeumorphButton
          android:id="@+id/minus_button"
          style="@style/Widget.Neumorph.Button"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:drawablePadding="8dp"
          android:fontFamily="@font/montserrat"
          android:padding="12dp"
          android:text="@string/calculator_minus"
          android:textColor="@color/colorPrimary"
          android:textSize="35sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/six_button"
          app:layout_constraintTop_toBottomOf="@+id/multiply_button"
          app:neumorph_backgroundColor="@color/colorAccent" />

  <soup.neumorphism.NeumorphButton
          android:id="@+id/five_button"
          style="@style/Widget.Neumorph.Button"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:drawablePadding="8dp"
          android:fontFamily="@font/montserrat"
          android:padding="12dp"
          android:text="@string/calculator_five"
          android:textColor="@color/colorAccent"
          android:textSize="35sp"
          app:layout_constraintEnd_toStartOf="@+id/six_button"
          app:layout_constraintStart_toEndOf="@+id/four_button"
          app:layout_constraintTop_toBottomOf="@+id/eight_button" />

  <soup.neumorphism.NeumorphButton
          android:id="@+id/six_button"
          style="@style/Widget.Neumorph.Button"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:drawablePadding="8dp"
          android:fontFamily="@font/montserrat"
          android:padding="12dp"
          android:text="@string/calculator_six"
          android:textColor="@color/colorAccent"
          android:textSize="35sp"
          app:layout_constraintEnd_toStartOf="@+id/minus_button"
          app:layout_constraintStart_toEndOf="@+id/five_button"
          app:layout_constraintTop_toBottomOf="@+id/nine_button" />

</androidx.constraintlayout.widget.ConstraintLayout>